{
    "form_id": "example_form",
    "form_name": "Example form",
    "form_description": "This is an example form",
    "custom_css": null,
    "steps": [
        {
            "step_id": "step1",
            "title": "Step 1",
            "description": "This is the first step",
            "fields": [
                /*
                    Aqui se definen los campos que tendrá este paso del formulario
                    Cada campo tiene un nombre, un tipo, si es requerido o no y opciones adicionales

                    Las opciones de cada campo dependen del tipo de campo

                    En options_template se definen las opciones que puede tener cada tipo de campo
                */
                {
                    "field_id": "field_1",
                    "title": "Short text",
                    "type": "short_text",
                    "required": true,
                    "options": {
                        "maxLength": 100,
                        "minLength": 1
                    }
                },
                {
                    "title": "Long text",
                    "type": "long_text",
                    "options": {
                        "maxLength": 1000,
                        "minLength": 1
                    },
                    "conditions": {
                        "required_fields_to_show": [
                            "field_1"
                        ]
                    }
                },
                {
                    "title": "Single choice",
                    "type": "single_choice",
                    "options": {
                        "choices": [
                            "choice1",
                            "choice2",
                            "choice3"
                        ]
                    }
                },
                {
                    "title": "Multiple choice",
                    "type": "multiple_choice",
                    "options": {
                        "choices": [
                            "choice1",
                            "choice2",
                            "choice3"
                        ]
                    }
                },
                {
                    "title": "Dropdown",
                    "type": "dropdown",
                    "options": {
                        "choices": [
                            "choice1",
                            "choice2",
                            "choice3"
                        ]
                    }
                },
                {
                    "title": "Image",
                    "type": "image",
                    "options": {
                        "maxImages": 1
                    }
                },
                {
                    "title": "File upload",
                    "type": "file_upload",
                    "options": {
                        "maxFiles": 1
                    }
                },
                {
                    "title": "Array",
                    "type": "array",
                    "options": {
                        "columns": [
                            {
                                "name": "column1",
                                "type": "text",
                                "options": {
                                    "maxLength": 100,
                                    "minLength": 1
                                }
                            },
                            {
                                "name": "column2",
                                "type": "text",
                                "options": {
                                    "maxLength": 100,
                                    "minLength": 1
                                }
                            }
                        ]
                    }
                },
                {
                    "title": "Scale",
                    "type": "scale",
                    "options": {
                        "min": 1,
                        "max": 5
                    }
                },
                {
                    "title": "Rating",
                    "type": "rating",
                    "options": {
                        "min": 1,
                        "max": 5
                    }
                },
                {
                    "title": "Date",
                    "type": "date",
                    "options": {
                        "format": "YYYY-MM-DD"
                    }
                },
                {
                    "title": "Time",
                    "type": "time",
                    "options": {
                        "format": "HH:mm"
                    }
                }
            ]
        },
    ]
